# =============================================================================
# TRAEFIK DEPLOYMENT ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and customize with your values
# DO NOT commit .env file to version control
# =============================================================================

# Server Configuration (same for all environments)
export VPS_SERVER_IP="your-vps-ip-here"

# Initial Deployment User (has root/sudo access)
export INITIAL_DEPLOYMENT_USER="ubuntu"
export INITIAL_DEPLOYMENT_SSH_KEY="~/.ssh/your-initial-key"

# Containers Deployment User (has Docker access)
export CONTAINERS_DEPLOYMENT_USER="docker_deployment"
export CONTAINERS_DEPLOYMENT_SSH_KEY="~/.ssh/your-docker-key"

# Environment Selection - Change this to switch environments
export TRAEFIK_ENVIRONMENT="development"

# Environment-Specific Overrides
if [ "$TRAEFIK_ENVIRONMENT" = "development" ]; then
    export TRAEFIK_ADMIN_PASSWORD="your-dev-password"
    export TRAEFIK_DASHBOARD_ENABLED="true"
    export TRAEFIK_MONITORING_ENABLED="false"
    export TRAEFIK_BACKUP_ENABLED="false"
    export TRAEFIK_RATE_LIMITING_ENABLED="false"
elif [ "$TRAEFIK_ENVIRONMENT" = "staging" ]; then
    export TRAEFIK_ADMIN_PASSWORD="your-staging-password"
    export TRAEFIK_DASHBOARD_ENABLED="true"
    export TRAEFIK_MONITORING_ENABLED="true"
    export TRAEFIK_BACKUP_ENABLED="true"
    export TRAEFIK_RATE_LIMITING_ENABLED="true"
elif [ "$TRAEFIK_ENVIRONMENT" = "production" ]; then
    export TRAEFIK_ADMIN_PASSWORD="your-production-password"
    export TRAEFIK_DASHBOARD_ENABLED="false"
    export TRAEFIK_MONITORING_ENABLED="true"
    export TRAEFIK_BACKUP_ENABLED="true"
    export TRAEFIK_RATE_LIMITING_ENABLED="true"
fi
